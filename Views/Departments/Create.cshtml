@model EduCare.Models.Department

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold mt-3 mb-3"><a href=@Url.Action("Index","Departments") class="back-btn"><i class="fa fa-arrow-left"></i> Create Department</a></h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box box-primary small-card">
        <div class="box-body">
            <div class="row">

                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label label-required" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required", @placeholder = "Name" } })
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <span class="text-danger">@TempData["Msg"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}