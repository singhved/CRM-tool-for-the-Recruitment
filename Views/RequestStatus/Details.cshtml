@model EduCare.Models.RequestStatusView

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="fw-bold mt-3 mb-3"><a href=@Url.Action("Index","RequestStatus") class="back-btn"><i class="fa fa-arrow-left"></i> Request Details</a></h4>

<div class="box box-primary small-card">
    <div class="box-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <dl class="dl-horizontal">
                        <dt>
                            Name
                        </dt>

                        <dd>
                            :  @Model.Name
                        </dd>

                        <dt>
                            Category
                        </dt>

                        <dd>
                            : @Model.CategoryName
                        </dd>

                        <dt>
                            Status
                        </dt>

                        <dd>
                           : @Model.Status
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>

</div>

